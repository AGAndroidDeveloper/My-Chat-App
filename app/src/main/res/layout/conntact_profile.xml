<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/friend_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:elevation="8dp"
android:layout_marginBottom="5dp"
        app:cardCornerRadius="12dp"
        android:transitionName="shared_element_container"

        app:rippleColor="#EFEF8D"

        app:strokeColor="#434310"
        android:layout_gravity="center"
        app:cardBackgroundColor="#89A1E3"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            android:gravity="start"

            android:layout_gravity="start">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_margin="3dp"

                app:civ_border_color="#4A615C"
                android:src="@drawable/my_password_pana"
                app:civ_border_width="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
android:layout_marginStart="10dp"
                android:layout_gravity="center"
              >

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                tools:text="@string/ankit_gupta"
android:layout_gravity="start"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"

                    android:textColor="#83072E"

                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_919001878234"
                    android:textSize="13sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textColor="#83072E" />
            </LinearLayout>




        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>